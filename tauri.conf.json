{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Flavortime",
  "version": "1.0.5",
  "identifier": "com.hackclub.flavortime",
  "build": {
    "frontendDist": "web"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Flavortime",
        "width": 520,
        "height": 720,
        "resizable": false,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper",
        "silent": true
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.13",
      "signingIdentity": "Developer ID Application"
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "windows": {
        "installMode": "quiet"
      },
      "endpoints": [
        "https://github.com/hackclub/flavortime/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IENENUI2QUI1RkIwNzE2NUUKUldSZUZnZjd0V3BiemZGVXZvUDdidldmUUtrL2tmZWFwdHVOOVdrTktNRThzNlpNR0NTZEQzdTIK"
    }
  }
}
